<%# <!-- ------------- Call to Action (Login/Sign Up) ------------- --> %>

<div class="maxWidthContainer">

      <div class="container CTAContainer">
        <div class="row textCenter">
          <div class="col-12 CTATitle">
              Join Us Now!
          </div>
          <div class="col-12">
            <div>
              <i class="fas fa-kiwi-bird CTAKiwi"></i>
            </div>
          </div>
          <div class="col-12">
            <button class="CTAButton" onclick="location.href='/login'">
              SIGN UP
            </button>
          </div>
        </div>
      </div>

</div>

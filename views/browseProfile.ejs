<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>

    <title>Browse Profile | Instances</title>

    <link rel="stylesheet" href="/styling/general.css" />
    <link rel="stylesheet" href="/styling/browseProfile.css" />
  </head>

  <body>
    <%- include('partials/nav'); %>

    <div class="outerAlignDiv">
      <div class="middleAlignDiv">
        <div class="innerAlignDiv">
          <div class="contentAlignDiv">
            <div class="row">
              <div class="col-6">
                <div class="card">
                  <div class="card-header">
                    <img
                      src="<%=data[0].photo %>"
                      alt="Profile Image"
                      class="profile-img"
                    />
                  </div>
                  <div class="card-body">
                    <a
                      href=""
                      class="btnProPic"
                      data-toggle="modal"
                      data-target="#modalProfilePictureForm"
                      >Edit Profile Picture</a
                    >
                    <p class="userName"><%=data[0].nickname %></p>
                    <p class="gender"><%=data[0].gender %></p>
                    <p class="desc"><%=data[0].description %></p>
                  </div>
                  <div class="card-footer">
                    <div class="col vr">
                      <p>
                        <span class="count"><%#joinedEventsa%>Number EJS</span>
                        Joined Events
                      </p>
                      <p>
                        <span class="count"><%=eventData.length %></span>
                        Events Hosted
                      </p>
                    </div>
                    <div class="col">
                      <!-- <button type="submit" name="button">Edit Profile</button> -->
                      <div class="text-center">
                        <a
                          href=""
                          class="btn"
                          data-toggle="modal"
                          data-target="#modalProfileForm"
                          >Edit Profile</a
                        >
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-6">
                <div class="row rightContainer">
                  <div class="col-12">
                    <div class="cardSmall cardFutureEvents">
                      <div class="smallTitle">My Hosted Events</div>
                      <ul class="eventList" style="overflow: scroll">
                        <% if (eventData.length > 0) {%> <% eventData.map(x => {
                        %>
                        <li>
                          <a
                            class="row eventRow"
                            href="/myEvents/<%=username%>/<%=id%>/<%=x.id%>"
                          >
                            <div class="col-8"><%=x.name %></div>
                            <div class="col-4 eventStatus">
                              <%=(x.date).toDateString() %>
                            </div>
                          </a>
                        </li>
                        <%}); %> <% } %>
                      </ul>
                    </div>
                  </div>

                  <div class="col-12">
                    <div class="cardSmall cardPastEvents">
                      <div class="smallTitle">Past Events</div>
                      <ul class="eventList">
                        <li>
                          <div class="row eventRow">
                            <div class="col-8">y.name</div>
                            <div class="col-4 eventStatus">y.date</div>
                          </div>
                        </li>
                        <li>
                          <div class="row eventRow">
                            <div class="col-8">
                              EJS Another Events Name <%#EventName%>
                            </div>
                            <div class="col-4 eventStatus">
                              EJS Rejected <%#Status%>
                            </div>
                          </div>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%# --------------- EDIT PROFILE MODAL --------------- %>

      <div
        class="modal fade"
        id="modalProfileForm"
        tabindex="-1"
        role="dialog"
        aria-labelledby="myModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <form
              class="filterContainer"
              action="/edit-profile/<%=username%>/<%=id%>"
              method="POST"
            >
              <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">
                  Edit Your Profile
                </h4>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body mx-3">
                <div class="md-form mb-5">
                  <i class="fas fa-user prefix grey-text"></i>
                  <label
                    data-error="wrong"
                    data-success="right"
                    for="orangeForm-name"
                    >Nickname</label
                  >
                  <input
                    type="text"
                    id="orangeForm-name"
                    class="form-control validate"
                    name="nickname"
                    placeholder="New Nickname"
                  />
                </div>
                <div class="md-form mb-5">
                  <i class="fas fa-envelope prefix grey-text"></i>
                  <label
                    data-error="wrong"
                    data-success="right"
                    for="orangeForm-email"
                    >Gender</label
                  >
                  <select
                    type="text"
                    name="gender"
                    class="form-control validate"
                    placeholder=""
                  >
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                  </select>
                </div>

                <div class="md-form mb-4">
                  <i class="fas fa-lock prefix grey-text"></i>
                  <label
                    data-error="wrong"
                    data-success="right"
                    for="orangeForm-pass"
                    >Description</label
                  >
                  <input
                    type="text"
                    name="description"
                    id="orangeForm-pass"
                    class="form-control validate"
                    placeholder="Update your description"
                  />
                </div>
              </div>
              <div class="modal-footer d-flex justify-content-center">
                <button
                  class="btn btn-deep-orange btnSave"
                  name="button"
                  type="submit"
                >
                  Save Profile
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <%# --------------- EDIT PROFILE PICTURE MODAL --------------- %>

      <div
        class="modal fade"
        id="modalProfilePictureForm"
        tabindex="-1"
        role="dialog"
        aria-labelledby="myModalLabel"
        aria-hidden="true"
      >
        <div
          class="modal-dialog modal-dialog-centered"
          id="modal-dialog"
          role="document"
        >
          <div class="modal-content" id="profilePictureModal">
            <div class="modal-header text-center">
              <h4 class="modal-title w-100 font-weight-bold">
                Edit Your Profile Picture
              </h4>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <div class="modal-body mx-3">
              <div class="md-form mb-5">
                <i class="fas fa-user prefix grey-text"></i>
                <label
                  data-error="wrong"
                  data-success="right"
                  for="orangeForm-name"
                  >Upload Your Photo</label
                >
                <input
                  type="file"
                  name="file"
                  id="orangeForm-name"
                  class="form-control validate"
                  placeholder=""
                />
              </div>
            </div>
            <div
              class="modal-footer d-flex justify-content-center"
              id="uploadPhoto"
            ></div>
          </div>
        </div>
      </div>
    </div>

    <script src="/javascript/createProfilePhoto.js"></script>
    <script src="/javascript/general.js"></script>
  </body>
</html>
